<?xml version="1.0"?>

<ruleset name="Spring custom rules"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>Rules for Spring Framework</description>

    <rule name="ClassNameShouldMatchAnnotation"
          message="Class name should contain annotation name"
          class="net.sourceforge.pmd.lang.java.rule.spring.ClassNameShouldMatchAnnotation">
        <description>
            Class name should contain annotation name
        </description>
        <priority>3</priority>

        <example>
            <![CDATA[
@Service
public class ExampleService {}
   ]]>
        </example>

    </rule>
</ruleset>